{% extends 'base.html.twig' %}

{% block title %}Delete Profile{% endblock %}

{% block body %}
    <div class="content ring">
        <div class="container">
            <h1>Are you sure you want to delete this list ?</h1>
        </div>

        <div class="container">
            <br />
            {{ form_start(delList) }}

            <button type="submit" class="btn btn-danger align-self-end">Yes, delete the list</button>
            {{ form_end(delList) }}
            <button type="cancel" class="btn btn-warning" onclick="javascript:window.location='/lists/show';">Cancel</button>

        </div>
    </div>
{% endblock %}