<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ path('home') }}styles.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar fixed-top navbar-custom navbar-expand-lg navbar-dark">
                <a class="navbar-brand" href="{{ path('home') }}">My Movie List</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    {% if is_granted('ROLE_ADMIN') %}
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item {% if app.request.attributes.get('_route') == 'home' %}active{% endif %} }">
                                <a class="nav-link" href="{{ path('home') }}">Home <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/lists/add">New movie list<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/lists/show">My movie lists<span class="sr-only">(current)</span></a>
                            </li>
                        </ul>
                        <ul class="navbar-nav mr-right">
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/users">Admin<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('myaccount') }}">My account<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout">Logout<span class="sr-only">(current)</span></a>
                            </li>
                        </ul>
                    {% elseif is_granted('ROLE_USER')  %}
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'home' %}active{% endif %} }" href="{{ path('home') }}">Home <span class="sr-only">(current)</span></a>
                            </li>
                            <li>
                                <a class="nav-link" href="/lists/add">New movie list<span class="sr-only">(current)</span></a>
                            </li>
                            <li>
                                <a class="nav-link" href="/lists/show">My movie lists<span class="sr-only">(current)</span></a>
                            </li>
                        </ul>
                        <ul class="navbar-nav mr-right">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('myaccount') }}">My account<span class="sr-only">(current)</span></a>
                            </li>
                            <li>
                                <a class="nav-link" href="/logout">logout<span class="sr-only">(current)</span></a>
                            </li>
                        </ul>
                    {% else %}
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'home' %}active{% endif %} }" href="{{ path('home') }}">Home <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'login' %}active{% endif %} }" href="/login">login <span class="sr-only">(current)</span></a>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'register' %}active{% endif %} }" href="/register">register <span class="sr-only">(current)</span></a></li>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </nav>
        </header>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    </body>
    <footer>
    </footer>
</html>



