{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="content ring">
        <div class="container">
            <h1>Update user</h1>
        </div>

        <div class="container">
            {{ form_start(form) }}
            <input type="hidden" name="id" value="{{ id }}" />
            {{ form_row(form.email) }}
            {{ form_row(form.username) }}
{#            {{ form_row(form.roles) }}#}
{#            {{ form_row(form.active) }}#}
            {{ form_end(form) }}
            <br />
            <div class="row justify-content-start">
                <div class="col-2">
                    <form method="DELETE" action="#"><button class="btn btn-danger align-self-end">Delete account</button></form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
